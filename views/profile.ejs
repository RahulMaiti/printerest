<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="../stylesheets/profile.css">
  <link rel="stylesheet" href="../stylesheets/main.css">
  <link rel="stylesheet" href="../stylesheets/navbar.css">
</head>

<body>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
  integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
  crossorigin="anonymous" referrerpolicy="no-referrer" />
  <div class="pinterest">
    <div class="left">
        <a href="/feed" class="logo"><i class="fab fa-pinterest"></i></a>
        <a href="/feed" class="home">Home</a>
        <a href="#" class="Explore">Explore</a>
    </div>
    <div class="search">
        <i class="fas fa-search"></i>
        <input type="search" name="" placeholder="Search " id="">
    </div>
    <div class="right">
        <a href="#" class="items"><i class="fas fa-bell"></i></a>
        <a href="#" class="items"><i class="far fa-comment-dots"></i></a>
        <a href="/profile" class="avatar">
            <div class="img"> 
                <img
                    src="https://imgs.search.brave.com/46hxzkJj9jex6_wcDvopoaQGHXnMqNm6eKpRdx50B4s/rs:fit:860:0:0/g:ce/aHR0cHM6Ly9jdXRl/ZHAuaW4vd3AtY29u/dGVudC91cGxvYWRz/LzIwMjIvMTAvZHBf/aW1hZ2UxMC0xMDY3/LmpwZw"
                    alt="">
                
                </div>
        </a> 
        <a href="/login" class=" logout">Logout</a>
    </div>
</div>

  <div class="container">
    <div class="card1">
      <div class="profile-picture">
        <img
          src="https://images.pexels.com/photos/771742/pexels-photo-771742.jpeg">
      </div>
      <h3 class="username">
        <%= user.username %>
      </h3>
      <h2 class="fullname">
        <%= user.fullname%>
      </h2>
      
      <p class="bio">This is my bio for the pinterest.</p><br>
      <a href="/logout" class="button">Logout</a>

      <div class="uploadingField">
        <form id="uploadform" action="/upload" method="post" enctype="multipart/form-data">
          <input class="btn temp" type="text" name="imageText" placeholder="Caption of image....">
          <input class="btn" id="imageinp" hidden type="file" name="file">
          <input id="button"  class="btn upload" type="button" value="Select File">
          <input class="btn upload" type="submit" value="upload">
        </form>
      </div>
    </div>


    <div class="main">
      <% user.posts.forEach(function(post){ %>
        <div class="cardBox"> 
          <img src="/images/uploads/uploads/<%= post.image %>" alt="img">
          <div class="caption">
            <%= post.imageText%>
          </div> 
        </div>
        <% }) %>

    </div>
  </div>
  </div>
  <script>
     document.querySelector("#button").addEventListener("click", ()=>{
      document.querySelector("#uploadform #imageinp").click();
     })
  </script>
</body>

</html>